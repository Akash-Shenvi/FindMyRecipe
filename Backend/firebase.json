{
  "functions": [
    {
      "source": "functions",
      "runtime": "python313",
      "codebase": "default",
      "memory": "512MiB",
      "ignore": [
        "venv",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    }
  ],
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "recipe_api"
      }
    ]
  }
}
